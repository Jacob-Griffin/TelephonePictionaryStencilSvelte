{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "typeRoots": ["./types"],
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true
  },
  "include": ["src/**/*"],
}
