{
  "compilerOptions": {
    "target": "ES6",
    "lib":["es2021","dom"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "typeRoots": ["./types"],
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true
  },
  "include": ["src/**/*.ts","src/*.ts"],
}
