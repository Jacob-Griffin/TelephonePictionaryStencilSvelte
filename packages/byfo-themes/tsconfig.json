{
  "compilerOptions": {
    "lib": ["dom","es2017.object","es2021"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
