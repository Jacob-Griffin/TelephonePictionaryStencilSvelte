{
  "name": "telephone-pictionary-app",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:utils": "turbo run --filter byfo-utils build",
    "dev": "turbo run dev --parallel",
    "dev:rebuild": "turbo run build && turbo run dev --parallel",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "node ./release.node.mjs",
    "generate": "pnpm --filter 'byfo-components-lit' generate",
    "g": "pnpm generate",
    "version-sync": "syncpack fix-mismatches",
    "up:ts": "pnpm --filter 'tp-app' install -D typescript",
    "up:vite": "pnpm --filter 'tp-app' install -D vite",
    "up:all": "pnpm up && pnpm up:ts && pnpm up:vite && syncpack fix-mismatches"
  },
  "devDependencies": {
    "eslint": "^9.19.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "prettier": "^2.8.8",
    "syncpack": "^13.0.1",
    "turbo": "^2.4.0",
    "typescript-eslint": "^8.22.0"
  },
  "packageManager": "pnpm@10.1.0"
}
